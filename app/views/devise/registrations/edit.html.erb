<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= link_to "Back", :back, class: 'btn-sort btn pull-right'%>
<div class="col-md-6 well">
  <div style="width:150px;"class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: 'btn-width form-control' %>
  </div>
  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: " btn-width form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: "btn-width  form-control" %>
  </div>
</div>
  <div class="well col-md-3">
  <strong style="font-size:16px;"> Shipping Address required: </strong>
    <div class="field ">
       <%= f.label :address %><br/>
       <%= f.text_field :address, class: 'btn-width form-control' %><br/>
     </div>

     <div class="field">
      <%= f.label :city %><br />
      <%= f.text_field :city, class: 'btn-width form-control' %>
     </div>
     <div class="field">
      <%= f.label :state %><br />
      <%= f.text_field :state, class: 'btn-width form-control' %>
     </div>
     <div class="field">
      <%= f.label :zipcode %><br />
      <%= f.number_field :zipcode, class: 'btn-width form-control' %>
     </div>
   </div>





  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>



  <div class="actions">
    <%= f.submit "Update", class: 'form-control btn-info' %>
  </div>
<% end %>

<h3>Cancel account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: ' btn-width form-control btn-danger' %></p>
