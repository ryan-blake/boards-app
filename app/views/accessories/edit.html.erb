    </div>
  <% end %>
<!--  -->
<div class="title center-text">
<%= f.label :title %>
  <td><%= f.text_field :title, class: 'btn-width form-control' %></td>
</div>


<div class=" center-text" style="max-height:200px; min-height:150px important!" id="images">
  <div class="progress" id='progress-bar' style='display:none;'>
    <div class="progress-bar progress-bar-striped active" role="progressbar" style="width:0%;background-color:#b2b2f1;">
      <span class="sr-only" id='progress-bar-text'></span>
    </div>
  </div>
  <%= f.label :add_images %><br>
  <btn class="center-text" style="position:absolute;left:calc(50% - 90px);">
  <%= f.attachment_field :images_files, multiple: true, presigned: true, direct: true %></btn>

  <div class="container-fluid row" style="position:relative;min-height:100px;max-height:120px; margin-top:25px;">
    <%= f.fields_for :images do |image_fields| %>
        <div class="col-xs-12 col-sm-6 col-md-3">
            <span style="max-width:20px;min-height:100px;max-height:100px;">
              <%= image_fields.label :remove %>
              <%= image_fields.check_box :_destroy, class: 'form-control' %>
              <%= attachment_image_tag(image_fields.object, :file, :fill, 75, 75) %>
            </span>
        </div>
    <% end %>
  </div>
</div>

<div class="dimensions" style="">
  <table class="" style="">
    <thead style="min-width:100%;">
      <th ><%= f.label :brand %></th>
      <th ><%= f.label :category_id, "category" %> <br></th>
      <th ><%= f.label :kind_id, "kind" %> <br></th>

    </thead>
    <tbody>
      <tbody>
        <td ><%= f.text_field :brand, class: 'btn-width form-control' %></td>
        <td ><%= f.grouped_collection_select :category_id, Type.order(:name),:categories, :name, :id, :name, include_blank: true %></td>
        <td ><%= f.grouped_collection_select :kind_id, Category.order(:name),:kinds, :name, :id, :name, include_blank: true %></td>
      <thead>

        <th class="col-sm-3"><%= f.label :inventory %></th>
        <th ><%= f.label :price %></th>
        <th ><%= f.label :color %></th>


      </thead>
      <tbody>
        <td class="col-sm-3"><%= f.number_field :inventory, class: 'form-control' %></td>
        <td class="col-sm-3"><%= f.number_field :price, class: 'form-control' %></td>
        <td><%= f.text_field :color, class: 'btn-width form-control' %></td>


      </tbody>
      <thead>
      </thead>
      <tbody>

      </tbody>
    </table>
    </div>


<%= f.label :price %><br/>
<%= f.number_field :price, class: 'btn-width form-control' %>
<%= f.hidden_field :user_id, :value => current_user.id %>



