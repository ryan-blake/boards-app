      { :include_blank => 'Unit'} , { :class => 'form-control' })%> </spam></td>    </div>
  </div>
  <div class="col-md-4">
    <div class="center-text form-group">
      <%= f.label :color %>
      <td ><%= f.text_field :color , class: 'form-control' %></td>
  </div>
</div>
<div class="col-md-4">
  <div class="center-text form-group">
      <%= f.label :upc %>
      <%= f.text_field :upc, class: 'form-control' %>
    </div>
  </div>
