  </div>
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :kind %>
      <%= f.grouped_collection_select :kind_id, Category.order(:name), :kinds, :name, :id, :name,   { :include_blank => 'Accssory-type'} , { :class => 'form-control input-lg' , id: 'accKind'} %>
</div>
</div>
</div>
<div class="row">
  <div class="col-md-4">
