
<!-- element -->
<script src="https://js.stripe.com/v3/"></script>

<div id="purchaseTokens" style="max-width:300px;width:100%;">
  <form action="/tokens" method="POST" id="payment-form">
        <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        <% end %>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div id="card-errors" class="alert alert-danger"></div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label>Dollar amount </label> <small> (Recieve 30 tokens monthly, each listing is 1 token. Accessories do not require tokens)</small>
              <input class="form-control input-lg" id="amount" name="amount" type="text" placeholder="$10.00 minumum">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label for="card-element">Card details</label>
              <div id="card-element" class="form-control input-lg field">
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <input type="hidden" name="email" value="<%= @user.email %>">
            <button style="color:black;" class="btn btn-lg btn-block btn-info" id="submit_payment" type="submit">
              Purchase Tokens
            </button>
          </div>
        </div>
        </div>
        <% @token = true %>
<script>
  document.forms['payment-form'].onsubmit = function(){
     document.getElementById("showToens").innerHTML = "<%= current_user.tokens.to_i %> + Tokens";
     return false;
  }

  </script>
