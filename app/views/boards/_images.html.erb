<div class="swiper-container-images" style="overflow-x:hidden;">
<div class="swiper-wrapper">
<% if @board.images.count >= 1%>
    <% @board.images.each_with_index do |photo, index| %>
            <div class="swiper-slide">
                <%= image_tag(attachment_url(photo, :file, :fill, 350, 350, format: 'jpg')) %>
             </div>
    <% end %>
    <% else %>
    <div class="swiper-slide">
      <!-- <%=  image_tag("surf_girl.jpg", height: 280, width: 330) %> -->
     <%=  image_tag("surf_girl.jpg", height: 300, width: 350) %>
   </div>

    <% end %>
  </div>
     <!-- Add Pagination -->
     <div class="swiper-button-next swiper-button-black"></div>
     <div class="swiper-button-prev swiper-button-black"></div>
     <div class="swiper-pagination"></div>
    </div>


    <script>
      var swiperImages = new Swiper('.swiper-container-images', {
          nextButton: '.swiper-button-next',
          prevButton: '.swiper-button-prev',
          pagination: '.swiper-pagination',
          paginationType: 'progress'
      });
    </script>
