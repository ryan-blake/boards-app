<div class="center-text" style="max-height:320px;">
  <div class="">
    <% @board.images.each_with_index do |photo, index| %>
      <%= link_to(image_tag(attachment_url(photo, :file, :fill, 150, 150, format: 'jpg')),
        attachment_url(photo, :file, :fit, 500, 500, format: 'jpg'),
        data: { lightbox: "example-set", title: "" }) %>
    <% end %>
  </div>
</div>

    <!-- Swiper -->
    <div class="swiper-container">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <div class="swiper-zoom-container">
                  <div class="center-text" style="max-height:320px;">
                    <div class="">
                      <% @board.images.each_with_index do |photo, index| %>
                        <%= link_to(image_tag(attachment_url(photo, :file, :fill, 150, 150, format: 'jpg')),
                          attachment_url(photo, :file, :fit, 500, 500, format: 'jpg'),
                          data: { lightbox: "example-set", title: "" }) %>
                      <% end %>
                    </div>
                  </div>
                </div>
            </div>
        </div>
        <!-- Add Pagination -->
        <div class="swiper-pagination swiper-pagination-white"></div>
        <!-- Add Navigation -->
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
    </div>

    <!-- Swiper CSS -->
    <style>
    .swiper-container {
            width: 100%;
            height: 100%;
        }
        .swiper-slide {
            overflow: hidden;
        }
        </style>

    <!-- Initialize Swiper -->
    <script>
    var swiper = new Swiper('.swiper-container-img', {
        zoom: true,
        pagination: '.swiper-pagination-img',
        nextButton: '.swiper-button-next-img',
        prevButton: '.swiper-button-prev-img'
    });
    </script>
