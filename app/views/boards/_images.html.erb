
    <!-- Swiper -->
    <div class="swiper-container">
    <% @board.images.each_with_index do |photo, index| %>
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <div class="swiper-zoom-container">
                        <%= link_to(image_tag(attachment_url(photo, :file, :fill, 350, 350, format: 'jpg')),
                          attachment_url(photo, :file, :fit, 500, 500, format: 'jpg'),
                          data: { lightbox: "example-set", title: "" }) %>
                </div>
            </div>
          <% end %>
        </div>

        <!-- Add Pagination -->
        <div class="swiper-pagination-img swiper-pagination-white"></div>
        <!-- Add Navigation -->
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
    </div>

    <!-- Swiper CSS -->
    <style>
    .swiper-container {
            width: 100%;
            height: 100%;
        }
        .swiper-slide {
            overflow: hidden;
        }
        </style>

    <!-- Initialize Swiper -->

    <script>
    var swiper = new Swiper('.swiper-container', {
        zoom: true,
        pagination: '.swiper-pagination',
        nextButton: '.swiper-button-next',
        prevButton: '.swiper-button-prev'
    });
    </script>
