<% brand = Board.where(:for_sale => true, :type_id => params[:type_id]).where("inventory >= ?", 1).distinct.pluck(:make).sort %>
<% @brand_boards = Board.where(make: brand, :type_id => params[:type_id]) %>
<%= collection_select(nil, :make, @brand_boards, :make, :make, {prompt: "Select Brand"},{ class: "form-control" }) %>
