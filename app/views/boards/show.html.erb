
<% if ( user_signed_in? && current_user.id === @board.user.id || @board.customer_id) || (@board.for_sale == true ) %>
<div class="container-fluid">
  <!-- shipping detail? try to clean up and gather data from stripe token -->
  <% if current_user && current_user.id == @board.customer_id.to_i %>
    <% if @board.shipping == nil %>
    <div class="">
      <div class="text-center">
          <h4 style="color:darkred;"> You're almost there!</h4>
             <h4 style="color:black;text-shadow:-1px 1px slategrey;"> Select if you want this item shipped check the box.<br> Local pickups press submit.</h4>
          <% end %>
          <%= render partial: 'shipping', locals: {board: @board} %>
    <% end %>
      </div>
    </div>
    <!-- edit button plus contact for shipping, is contact for shipping necessary -->
  <div class="well-sm pull-left" style="position:absolute;top:0;">
    <% if (current_user && current_user.id == @board.user_id)%>
      <%= link_to "Edit", edit_board_path, class: 'btn btn-primary pull-right' %>
      <% if @board.shipping == nil && (@board.customer_id != nil && @board.customer_id != "nil") && @board.for_sale == false %>
      <td><%= link_to 'delete', @board, method: :delete, data: { confirm: 'Are you sure you want to delete this listing? '}, class: 'btn btn-warning' %></td>
        <% @a = @board.customer_id %>
        <% b = User.find(@a).email %>
        contact <%= b %> for shipping info
      <% elsif @board.shipping == true %>
      <!-- shipping address -->
        <% @a = @board.customer_id %>
        <% b = User.find(@a).email %>
        Ship to <strong><%= @board.address + " " + @board.city.capitalize + " " + @board.state.upcase + ", " + @board.zipcode.to_s  %></strong>
        enter tracking number:
         <br>
         <% if !@board.tracking%>
          <%= render partial: 'tracking', locals: {board: @board} %>
         <% end %>
      <% elsif @board.shipping == false %>
        <% @a = @board.customer_id %>
        contact <% b = User.find(@a).email %>
        <%= b %>
        for pickup info
      <% end %>
    <% end %>
  </div>
    <!-- begin view -->
<div class="title center-text">
  <strong><%= @board.title %></strong>

</div>
  <div class="image-box center-text" id="images">
    <%= render partial: 'images' %>
  </div>
  <hr class="style13">
</div>


<div class="dimensions" style="min-height:250px;">
  <table class="col-sm-3 col-md-5" style="position:absolute;top:0px;">
    <thead>
      <th class="col-sm-3"> Height: </th>
      <th class="col-sm-3"> Width: </th>
      <th class="col-sm-3"> Make: </th>
      <th class="col-sm-3"> New: </th>
      <th class="col-sm-3"> Addon: </th>
      <% if @board.type_id == 1 %>
       <td class="col-sm-3">Voume:</td>
       <% end %>
    </thead>
    <tbody>
      <td class="col-sm-3"> <%= @board.length %> </td>
      <td class="col-sm-3"> <%= @board.width %> </td>
      <td class="col-sm-3"> <%= @board.make %> </td>
      <td class="col-sm-3"> <%= @board.used %> </td>
      <td class="col-sm-3"> <%= @board.footgear %> </td>
      <% if @board.type_id == 1 %>
       <td class="col-sm-3">
       <%= @board.volume %>
      <% end %>
    </tbody>
</div>
</table>
<div class="description pull-right" style="top:30px;">
  <%= @board.description %>
</div>
<br>
<br>
<hr class="style13">

<div class="payment center-text" style="padding-top:30px;padding-bottom:30px;">
 <% if current_user && current_user.id == @board.user_id %>
  <strong style="font-size:30px;">
    $<%= @board.price %>
  </strong>
   <% else %>
   <% if @board.for_sale == true %>
     <strong style="font-size:30px;">
       $<%= @board.price %>
     </strong>
     <div class="form-group">
      <span>
        <label for="checkbox_pick">
          Pick Up:
        </label>
        <input id="checkbox_pick_up" type="checkbox">
      </span>
     </div>
     <div id="delivery_id" style="display:none;">
       <div class="form-group">
        <%= render partial: 'chargeshow' %>
       </div>
     </div>
     <div id="pickup_id" style="display:none;" class="center-text">
       <div class="form-group">
         <%= render partial: 'charge'%>
       </div>
     </div>
   <% end %>
  <% end %>
</div>

<% if !current_user %>
  <% elsif @board.for_sale === true && @board.user_id == current_user.id %>
      <%= render partial: 'forsale', locals: {board: @board} %>
  <% elsif @board.for_sale == false  && @board.user_id == current_user.id%>
  <%= render partial: 'forsale', locals: {board: @board} %>
 <% end %>
</div>

<% end %>

<script>
$(document).ready(function() {
var checkbox_s = document.getElementById('checkbox_pick_up');
var delivery_id = document.getElementById('delivery_id');
var pickup_id = document.getElementById('pickup_id');
delivery_div.style['display'] = 'block';
  checkbox_s.onclick = function() {
   if(this.checked) {
     delivery_id.style['display'] = 'none';
     pickup_id.style['display'] = 'block';
   } else {
     delivery_id.style['display'] = 'block';
     pickup_id.style['display'] = 'none';
     checkbox_s.checked = false;
   }
  };
});
</script>
