
    <table class="center-text" style="">
      <thead>
        <th class="center-text single_table top" style="margin-left:20%;min-width:30%;max-width:30%;padding: 0px 4px;">Brand</th>
        <th class="center-text single_table top" style="nax-width:30%;padding: 0px 4px;"> Dimensions</th>

        <% if @board.surfable? %>
          <th class="center-text single_table top" style="width:30%;padding: 0px 4px;">Tail</th>
          <% else %>
          <% if @board.used == true  %>
            <th class="center-text single_table top" style="nax-width:30%;padding: 0px 4px;"> </th>
          <% end %>
        <% end %>
      </thead>
      <tbody>
        <td class="center-text" style="max-width:55%;border:black 1px solid;padding: 0px 4px;">
          <%= @board.make %>
        </td>
        <% if @board.surfable? && @board.size %>
          <td class="center-text single_table" style="min-width:150px;max-width:35%;border:black 1px solid;padding: 0px 4px;">
            <%= @board.size.pretty_surf %>
          </td>
          <% if @board.tail_id %>
           <td class="center-text single_table" style="width:30%;padding: 0px 4px;">
            <%= @board.tail.name%>
           </td>
          <% end %>
        <% else %>
          <td class="center-text" style="max-width: 35%;border: black solid 1px;padding: 0px 4px;">
            <% if @board.size %>
           <%= @board.size.pretty_dimensions %>
           <% end %>
          </td>
          <td class="center-text" style="max-width: 35%;border: black solid 1px;padding: 0px 4px;">
            <% if @board.used == true %>
               used
            <% end %>
          </td>
        <% end %>
      </tbody>
      <% if @board.surfable? %>
        <thead>
          <% if !@board.used %>
            <th class="single_table center-text top" style="padding:top:10px;nax-width:15%;padding: 0px 4px;"></th>
            <% else %>
            <th class="single_table center-text top" style="padding:top:10px;nax-width:15%;padding: 0px 4px;"></th>
          <% end %>
          <th class="single_table center-text top" style="width:30%;padding: 0px 4px;">Volume </th>
          <th class="single_table center-text top" style="width:30%;padding: 0px 4px;"> Finbox </th>

        </thead>
        <tbody >
          <% if @board.used %>
           <td class="single_table center-text" style="width:30%;padding: 0px 4px;">Used
          <% end %>
          </td>
         <td class="single_table center-text" style="width:30%;padding: 0px 4px;">
           <% if @board.size %>
            <%= @board.size.volume%>
           <% end%>
         </td>
         <% if @board.fin.name.present? %>
         <td class="single_table center-text" style="width:30%;padding: 0px 4px;">
              <%= @board.fin.name%>
            </td>
            <% else %>
            <td class="single_table center-text" style="width:30%;padding: 0px 4px;">
            </td>
            <td class="single_table center-text" style="width:30%;padding: 0px 4px;">
            </td>

          <% end %>
        <% end %>
      </tbody>
    </table>
