<% modal ||= false %>
<% remote = modal ? true : false %>
<%= form_for(@board, :remote => true, html: {role: :form, 'data-model' => 'board'}) do |f| %>

  <div class="actions  text-center">

<% if @board.for_sale === false && @board.pending == false %>
  <div class="actions">
    <%= f.hidden_field :pending , value: false %>
    <%= f.hidden_field :shipping, :value => nil %>
    <%= f.hidden_field :for_sale , value: true %>
    <%= button_tag "list!", class: "btn btn-success", data: {disable_with: "<i class='fa fa-spinner fa-spin' ></i> Listing..."} %>
  </div>

  <% elsif @board.for_sale == false && @board.pending == true && @board.user_id == current_user.id %>
    <%= f.hidden_field :shipping, value: nil %>
    <%= f.hidden_field :shipped, value: nil %>
    <%= f.hidden_field :tracking, value: nil %>
    <%= f.hidden_field :customer_id, value: "nil"  %>
    <%= f.hidden_field :address, value: "" %>
    <%= f.hidden_field :pending, value: false %>
  <div class="actions">
   <%= f.hidden_field :for_sale , value: false %>
   <%= button_tag "Cancel", class: "btn btn-success", data: {disable_with: "<i class='fa fa-spinner fa-spin' ></i> canceling..."} %>
  </div>
  
  <% elsif @board.for_sale == true && @board.pending == false %>
  <%= f.hidden_field :pending, value: false %>
  <div class="actions">
   <%= f.hidden_field :for_sale , value: false %>
   <%= button_tag "Delist", class: "btn btn-success", data: {disable_with: "<i class='fa fa-spinner fa-spin' ></i> delisting..."} %>


  <% else %>
  uh oh - forsale
<% end %>


<% end %>
