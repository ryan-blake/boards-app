<h4 class="dash-data-title"> Active Inventory </h4>
<table class="container-fluid" id="results" style="width:100%;">
  <% if @active_boards.length == 0 %>
    <%= render partial: 'boards/none' %>
  <% end %>
  <thead>
    <td>
      <div class="center-text" id="active_boards">
      <%= paginate @active_boards, remote: true, window: 1 %>
      </div>
      <tr>
        <td class="filtering center-text">
          <ti> <strong> Sort by: </strong> </ti>
         </ti>
          <div  <i style="display:inline;" class="btn btn-sort">  <%= sortable "created_at", "Date" %></i></div>
          <div <i style="display:inline;" class="btn btn-sort"> <%= sortable "price" %></i></div>
          <div  <i style="display:inline;" class="btn btn-sort"> <%= sortable "length", 'height' %></i></div>
         </ti>
        </td>
      </tr>
    </td>
  </thead>


  <div class="row" id="pending-table">
    <div class="col-md-12">
      <table class="table table-bordered table-striped table-hover">
        <thead>
          <tr>
            <th>image</th>
            <th><i style="display:inline;" class="btn btn-sort"> <%= sortable "title" %></th>
            <th><i style="display:inline;" class="btn btn-sort"> <%= sortable "price" %></i></th>
            <th><i style="display:inline;" class="btn btn-sort"> <%= sortable "cost" %></i></th>
            <th><i style="display:inline;" class="btn btn-sort"> <%= sortable "margin" %></i></th>
            <th>listing</th>
          </tr>
        </thead>

        <tbody>
        <% @active_boards.each do |board| %>
            <tr>
              <td><%= link_to attachment_image_tag(board.images.first, :file, :fill, 80, 80), board, remote: true, data: { toggle: "modal", target: "#newModal" } %></td>
              <td><%= link_to board.title.truncate(13), board, target: :_blank %></td>
              <td><%= format_amount(board.price * 100) %></td>
              <td><%= format_amount(board.cost * 100)  %></td>
              <td><%= board.margin  %>%</td>
              <td class="text-center">
                <small><%=board.category.name %> </small>
                <% if board.for_sale == false %>
                  <span class="text-danger">
                    inactive
                  </span>
                <% else %>
                active
              </td>
            </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <!--  -->

    <tbody >
      <td>
        <div class="center-text pagination" id="active_boards">
        <%= paginate @active_boards, remote: true, window: 1 %>
        </div>
      </td>
    </tbody>
  </table>
