<%= form_for(board) do |f| %>
  <% if board.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(board.errors.count, "error") %> prohibited this board from being saved:</h2>

      <ul>
      <% board.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions  text-center">
    <%= f.hidden_field :user_id, :value => current_user.id %>

  <div class="well">
      <div class="well">
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control' %>

         <%= f.label :types %>
         <%= f.collection_select :type_id, Type.all, :id, :name, class: 'form-control' %>
       </div>

      <div class="well pull-right">
      <br>
        <div class="form-group">
          <%= f.label :make %>
          <%= f.text_field :make, class: 'form-control' %>
        </div>

        <div class="form-group">
          <p> age of board<p>
          <%= f.label :age %><br/>
         <%= f.number_field :age %>
       </div>

        <div class="form-group">
          <p> price per day <p>
          <%= f.label :price %><br/>
         <%= f.number_field :price %>
        </div>
        <div class="form-group">
          <%= f.label :length %><strong> Bow to Stern </strong><br/>
         <%= f.number_field :length %>
        </div>

        <div class="form-group">
          <%= f.label :width %><strong> Bow to Stern </strong><br/>
         <%= f.number_field :width %>
        </div>
        <div class="form-group">
          <%= f.label :volume %><strong> Bow to Stern </strong><br/>
         <%= f.number_field :volume %>
        </div>



      </div>

    <div class="form-group" style="display:flex;">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
    <div class="form-group" style="display:flex;">
      <%= f.label :footgear %>
      <%= f.check_box :footgear %> <br />
    </div>
  </div>

  <div class="field">
      <%= f.label :images_files %><br>
      <%= f.attachment_field :images_files, multiple: true, presigned: true, direct: true %>
  </div>


    </br>



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
