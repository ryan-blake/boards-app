  <table class="container-fluid" id="results" style="width:100%;">
    <% if @boards.length == 0 %>
      <%= render partial: 'boards/none' %>
    <% end %>
    <% if current_user %>
    <% @boards = @boards.where.not(:user_id => current_user) %>
    <% end %>
    <thead>
      <td>
        <div class="center-text" id="paginator">
        <%= paginate @boards, remote: true %>
        </div>
        <tr>
          <td class="filtering center-text">
            <ti> <strong> Sort by: </strong> </ti>
            <ti class="btn btn-sort" style="padding-left:8px;"><%= sortable "created_at", "Date" %> </ti>
            <ti class="btn btn-sort"><%= sortable "price" %></ti>
            <ti class="btn btn-sort center-text" ><%= sortable "length", "Height" %></ti>
          </td>
        </tr>
      </td>
    </thead>

  <% @boards.each do |board| %>
    <tbody class="col-sm-6 col-md-4 center-text" style="min-width:300px;min-height:410px;">
        <!-- if no image load other boards image in results -->
        <td class="center-text" style="min-height:240px;">
          <% if board.images == true %>
            <%= link_to attachment_image_tag(board.images.first, :file, :fill, 240, 240), board, remote: true, data: { toggle: "modal", target: "#newModal" }%>
          <% else %>
            <%= link_to attachment_image_tag(Board.find(20).images.first, :file, :fill, 240, 240), board, remote: true, data: { toggle: "modal", target: "#newModal" }%>
          <% end %>

      <ul class="main-well-ul">
         <li class="center-text title-ind">
           <!-- new link to modal -->
           <div class="title-bar center-text">
             <%= link_to board.title, board, target: :_blank  %>
          </div>
          <%if current_user && board.user_id == current_user.id %>
           <li><%= link_to 'Edit', edit_board_path(board) %></li>
          <% end %>
          <div class="length-ribbon">
            <% num = board.length / 12.to_d %><%b = num.divmod 1%> <%=b[0].floor%>' <%= b[1].round(2) %>''<br>
          </div>
         </li>
         <li class="center-text" style="min-width:242px;">
          <%=  board.description.truncate(33)  %>
         </li>
         <li class="center-text">
           <strong style="font-size:20px;"><%=  board.make %></strong>
         </li>
         <li class="center-text" style="padding-top:5px;">
           <strong class="pull-left" style="padding:5px;font-weight:lighter;font-size:20px;">$<%= board.price %></strong>
             <button class="btn btn-sort pull-right"><%= link_to 'view', board, target: :_blank  %></button>
             <br>
             <hr class="style13">
           </td>
           </ul>
        </tbody>
        <% end %>

        <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" id="newModal">
           <div class="modal-dialog modal-lg" role="document">
             <div class="modal-header">
               <button type="button" class="close" style="color:white;" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
             </div>
             <div class="modal-content">
             </div>
           </div>
           <div class="center-text" id="paginator">
           </div>
         </div>


      <tbody >
        <td>
          <div class="center-text" id="paginator">
          <%= paginate @boards, remote: true %>
          </div>
        </td>
      </tbody>
    </table>
