<% if ( current_user && current_user.stripe_account != nil ) && (@board.shipping != true || false ) %>
<div class="panel panel-default topspace">
  <div class="panel-body">
  <%= form_for(@board, remote: true)  do |f| %>
  <% if @board.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(board.errors.count, "error") %> prohibited this board from being saved:</h2>
      <ul>
      <% @board.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
<% if current_user.stripe_account != nil %>
<div id="editBoard" class="center-text" style="height:100%;max-width:85%;margin-left: 10%;margin-right: 5%;">
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'btn-width form-control input-lg' %>
    </div>
  </div>
</div>

  <div class="row image-box center-text" id="images">
    <div class="progress" id='progress-bar' style='display:none;'>
      <div class="progress-bar progress-bar-striped active" role="progressbar" style="width:0%;background-color:#b2b2f1;">
        <span class="sr-only" id='progress-bar-text'></span>
      </div>

    </div>
    <%= f.label :add_images %><br>
    <btn class="center-text" style="position:absolute;left:calc(50% - 90px);">

    <%= f.attachment_field :images_files, multiple: true, presigned: true, direct: true, id: 'file-input', type: 'file'  %></btn>

    <div id="image"></div>

<hr>
<div id="preview"></div>
  </div>

    <div class="row">
      <div class="col-md-5">
        <div class="form-group">
          <%= f.label :make, "Brand"%>
          <%= f.text_field :make, class: "form-control input-lg", placeholder: "Enter Brand" %>
        </div>
      </div>
      <div class="col-md-5">
        <div class="form-group">
<label> Category </label>
          <%= f.grouped_collection_select :category_id, Type.order(:name), :categories, :name, :id, :name,   { :include_blank => 'Choose Category'} , { :class => 'form-control input-lg' } %>
        </div>
      </div>
    </div>

    <div class="row">
      <div id="sizeForm" style="display:block;width:100%;margin:0px;">
        <%= f.fields_for :size do |builder| %>
          <%= render "sizes/edit", :f => builder %>
        <% end %>
        <div class="row" id="surf_box">
          <div class="col-md-4">
            <div class="form-group">
              <%= f.label :tail_id, "Tail Type" %>
              <%=  f.collection_select( :tail_id, Tail.all, :id, :name,
                { :include_blank => 'Tail'} , { :class => 'form-control input-lg' }) %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <label>Fin Type</label>
              <%=  f.collection_select :fin_id, Fin.all, :id, :name,
                { :include_blank => 'Fin'} , { class: "form-control input-lg" } %>
            </div>
          </div>
        </div>
    </div>
    </div>

    <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <label>inventory:</label>
          <%= f.number_field :inventory, min: 0,class: 'btn-width form-control input-lg' %>
      </div>
    </div>
    <div class="col-md-1">
      <div class="form-group">
        <label>Used:</label>
        <%= f.check_box :used, class: 'form-control input-lg' %>
      </div>
    </div>
  </div>
    <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <label>Cost:</label>
        <%= f.number_field :cost, min: 1, class: 'form-control input-lg' %> <br />
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label>Margin:</label>
          <%= f.number_field :margin, min: 0, class: 'btn-width form-control input-lg' %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label>Sale Price:</label>
        <%= f.number_field :price, min: 0, class: 'input-lg btn-width form-control' %>
      </div>
    </div>

    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :company, :value => current_user.company ? current_user.company : nil %>
    <%= f.hidden_field :list_time, :value => Time.now %>
  </div>
    <div class="row">
      <div class="col-md-11">
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control', placeholder: "Enter Description", style: 'min-height:80px;min-width:100%;'%>
        </div>
      </div>
    </div>

    <% if @board.accessories.count >= 1 %>
    <div class="row">
      <div class="">
        <div class="form-group">
          <div id="accessoryForm" style="margin-bottom:50px;display:block;position:relative;min-height:400px;min-width:100%;">
            <hr class="style14">

            <div>
              <%= f.fields_for :accessories do |builder| %>
                <%= render "accessories/edit", :f => builder %>
              <% end %>

            <hr>
            </div>
         </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
        <div class="center-text" id="" style="position:relative;">
          <%= f.submit 'Update', class: 'form-control btn-success' %>
        </div>
    </div>
  </div>
    <% else %>
    <div class="row">
      <div class="col-md-12">
          <div class="center-text" id="createBtn" style="position:relative;">
            <%= f.submit 'Update', class: 'form-control btn-success'%>
          </div>
      </div>
    </div>
    <% end %>

    </div>
<!-- section -->

  <% end %>
  <% end %>

  <script>

  function previewImages() {

var preview = document.querySelector('#preview');

if (this.files) {
  [].forEach.call(this.files, readAndPreview);
}

function readAndPreview(file) {

  // Make sure `file.name` matches our extensions criteria
  if (!/\.(jpe?g|png|gif)$/i.test(file.name)) {
    return alert(file.name + " is not an image");
  } // else...

  var reader = new FileReader();

  reader.addEventListener("load", function() {
    var image = new Image();
    image.height = 100;
    image.title  = file.name;
    image.src    = this.result;
    preview.appendChild(image);
  }, false);

  reader.readAsDataURL(file);

}

}

document.querySelector('#file-input').addEventListener("change", previewImages, false);

  </script>
</div>
</div>
<% end %>
