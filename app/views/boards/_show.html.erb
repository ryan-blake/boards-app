  <script src="https://checkout.stripe.com/checkout.js"></script>
  <script>

  $(document).ready(function() {
  var open = document.getElementById('showOffer');
  var offerPartial = document.getElementById('offerPartial');
  var closePartial = document.getElementById('closeOffer');


  open.onclick = function() {
    if (offerPartial.style.display == 'none') {
       offerPartial.style['display'] = 'block';
       closePartial.style['display'] = 'block';
       open.style['display'] = 'none';

         //  elemelons
                 $(function(){
                   // Set your Stripe publishable API key here
                   var stripe = Stripe("<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>");
                   var elements = stripe.elements();
                   // Style the payment element
                   var style = {
                     base: {
                       fontSize: "14px"
                     }
                   };
                   // Create an instance of the card Element
                   var card = elements.create('card', {style: style});
                   // Add an instance of the card Element into the `card-element` <div>

                   card.mount('#card-element');
                   // Listen for errors
                   card.addEventListener('change', function(event) {
                     var displayError = document.getElementById('card-errors');
                     if (event.error) {
                       displayError.textContent = event.error.message;
                       displayError.style.display = 'block';
                     } else {
                       displayError.textContent = '';
                       displayError.style.display = 'none';
                     }
                   });
                   // Create a token
                   var form = document.getElementById('payment-offer');
                   form.addEventListener('submit', function(event) {
                     event.preventDefault();
                     // Validate the form isn't empty before requesting a token
                     if (document.getElementById('amount').value == ''){
                       return false;
                     }
                     var submit_btn = document.getElementById('submit_payment');
                     var errorElement = document.getElementById('card-errors');
                     submit_btn.innerHTML = "<i class='fa fa-spinner fa-spin'></i> submitting...";
                     submit_btn.className += " disabled";
                     stripe.createToken(card).then(function(result) {
                       if (result.error) {
                         errorElement.textContent = result.error.message;
                         errorElement.style.display = 'block';
                         submit_btn.innerHTML = "Submit Offer";
                         submit_btn.classList.remove("disabled");
                       } else {
                         // Reset errors
                         errorElement.textContent = '';
                         errorElement.style.display = 'none';
                         // Send the token to your server
                         stripeTokenHandler(result.token);
                       }
                     });
                   });
                   // Submit the token
                   function stripeTokenHandler(token) {
                     // Insert the token ID into the form so it gets submitted to the server
                     var form = document.getElementById('payment-offer');
                     var hiddenInput = document.createElement('input');
                     hiddenInput.setAttribute('type', 'hidden');
                     hiddenInput.setAttribute('name', 'stripeToken');
                     hiddenInput.setAttribute('value', token.id);
                     form.appendChild(hiddenInput);

                     var hiddenAmount = document.createElement('input');
                     hiddenAmount.setAttribute('type', 'hidden');
                     hiddenAmount.setAttribute('name', 'charge');
                     hiddenAmount.setAttribute('value', $('#amount').get(0).value);
                     form.appendChild(hiddenAmount);

                     var hiddenAccessories = document.createElement('input');
                     hiddenAccessories.setAttribute('type', 'hidden');
                     hiddenAccessories.setAttribute('name', 'accessories');
                     hiddenAccessories.setAttribute('value', $('#accessoriesOfferArray').get(0).value);
                     form.appendChild(hiddenAccessories);

                     var hiddenAddress = document.createElement('input');
                     hiddenAddress.setAttribute('type', 'hidden');
                     hiddenAddress.setAttribute('name', 'address-line1');
                     hiddenAddress.setAttribute('value', $('#address-line1').get(0).value);
                     form.appendChild(hiddenAddress);
                     var hiddenCity = document.createElement('input');
                     hiddenCity.setAttribute('type', 'hidden');
                     hiddenCity.setAttribute('name', 'address-city');
                     hiddenCity.setAttribute('value', $('#address-city').get(0).value);
                     form.appendChild(hiddenCity);
                     var hiddenState = document.createElement('input');
                     hiddenState.setAttribute('type', 'hidden');
                     hiddenState.setAttribute('name', 'address-state');
                     hiddenState.setAttribute('value', $('#address-state').get(0).value);
                     form.appendChild(hiddenState);
                     var hiddenZip = document.createElement('input');
                     hiddenZip.setAttribute('type', 'hidden');
                     hiddenZip.setAttribute('name', 'address-zip');
                     hiddenZip.setAttribute('value', $('#address-zip').get(0).value);
                     form.appendChild(hiddenZip);
                     var hiddenCountry = document.createElement('input');
                     hiddenCountry.setAttribute('type', 'hidden');
                     hiddenCountry.setAttribute('name', 'address-country');
                     hiddenCountry.setAttribute('value', $('#address-country').get(0).value);
                     form.appendChild(hiddenCountry);
                     var hiddenName = document.createElement('input');
                     hiddenCountry.setAttribute('type', 'hidden');
                     hiddenCountry.setAttribute('name', 'name');
                     hiddenCountry.setAttribute('value', $('#name').get(0).value);
                     form.appendChild(hiddenName);

                var hiddenCheck = document.createElement('input');
                hiddenCheck.setAttribute('type', 'hidden');
                hiddenCheck.setAttribute('name', 'shipping');
                hiddenCheck.setAttribute('value', $('#shipOfferCheck').is(":checked"));
                form.appendChild(hiddenCheck);




                     // Submit the form
                     form.submit();
                   }
                 });
         // !elemelons
    }

  };
  closePartial.onclick = function() {
  if (closePartial.style.display == 'block') {
    closePartial.style['display'] = 'none';
    offerPartial.style['display'] = 'none';
    open.style['display'] = 'block';
  }
  };
  });

  </script>
