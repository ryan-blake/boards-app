<% if boards.count >= 1%>
 <%  boards.each_with_index do |i, index| %>
 <% if index < 10 %>
 <tbody style="float:right;min-width:180px;max-height:195px;min-height:200px;max-height:200px;position:relative;padding:0;background-color:white;min-width:25%;">
<tr class="" style="">
   <td class="vendor-link" style="cursor:pointer;">
<div class="center-text">
  <%= link_to i.title, i, remote: true, data: { toggle: "modal", target: "#newModal" } %>
  <div class="boardImage"  style="padding: 0 9px;cursor:pointer">
    <%= link_to  image_tag("surf_girl.jpg", width: 130), i, remote: true, data: { toggle: "modal", target: "#newModal" }%>

    <!-- <%= link_to attachment_image_tag(i.images.last, :file, :fill, 150, 150), i, remote: true, data: { toggle: "modal", target: "#newModal" }%> -->
  </div>
    <span class="center-text"><%= i.make %> </span>
    <br>
    <span class="center-text"><%= i.category.name %>  <strong>$<%= i.price %>.00</strong></span>
  </td>
</div>
</tr>
</tbody>
<% end %>
<% end %>
<% end %>

<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" id="newModal">
   <div class="modal-dialog modal-lg" role="document">
     <div class="modal-header">
       <button type="button" class="close" style="background-color:black;width:100%;height:30px;border-radius:2%;color:white;" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">CLOSE</span></button>
     </div>
     <div class="modal-content">
     </div>
   </div>
 </div>
