         <strong>Volume: </strong><%= board.volume %>
        <% else %>
        <strong>Volume: </strong> N/A

        <% end %>
     </li>
     <li>
      type: <%= board.type.name %>
     </li>
     <li>
      type: <%= board.category.name %>
     </li>
     <li>
