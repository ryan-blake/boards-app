<!-- <p id="notice"><%= notice %></p> -->

<% unless current_user %>
<div style="position:absolute; left:calc(50% - 20px;)">
<p><%= link_to 'Register', new_user_registration_path, class: 'btn btn-primary btn-lg' %></p>
</div>
<% else %>

<% if  current_user && current_user.provider != nil %>
<h3 class="pull-right"><%= link_to 'New', new_board_path %></h3>
<% end %>

<% if current_user && current_user.provider == nil %>
<%= link_to image_tag('powered-by-stripe.png'), user_stripe_connect_omniauth_authorize_path %>
<% elsif current_user && current_user.provider != nil %>
<h2 style="color:white;"> CONNECTED <%= current_user.uid %> </h2>
<% end %>


<table class="well" style="width:100%;">
  <thead >
    <td>
 <h1 style="padding-left: 25px;">Boards</h1>
    </td>
  </thead>

  <tbody class="well container-fluid">
    <% @boardies.each do |board| %>
      <tr>
        <td class="well"style=" width:30px;border-radius:50%;text-align:center;background-color:lightgrey;overflow:hidden;"><%= link_to attachment_image_tag(board.images.first, :file, :fill, 100, 100), board %></td>
        <td style="text-align:center;" class="title-ind"><%= link_to board.title, board %></td>
        <td>: <%=  board.make  %> </td>
        <td>: <%=  board.length %> </td>
        <strong> <td>: $<%=  board.price %> </td> </strong>

        <%if current_user && board.user_id == current_user.id %>
        <td><%= link_to 'Edit', edit_board_path(board) %></td>
        <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</hr>




</div>
<% end %>
