<div class="col-lg-8">
  <div class="well" style="background:azure; box-shadow: 1px 4px 9px 4px grey; border-color: white;">

<%= form_tag({controller: :boards, action: :search}, {method: :get}) do  %>

 <div class="col-sm-4">
