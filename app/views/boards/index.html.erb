<!-- start board load -->

<hr class="style13">

<!-- test on local search -->
<div class="col-lg-1" style="position:relative;margin-top:-27px;width:100%;">
  <div class=" cat-well" style="margin:10px 0;background:azure; box-shadow: 1px 10px 19px 0px grey; border-color: white;">
  <%= form_tag({controller: :boards, action: :search_signed_in}, {method: :get, remote: true}) do  %>
  <div class="row">
    <div class="col-lg-6">
      <div class="input-group">
        <span class="input-group-btn">
          <%= collection_select(nil, :type_id, Type.order(:name), :id, :name, {prompt: "Choose a type" },{ id:'type-select', class: "form-control" }) %>
         </span>
      </div><!-- /input-group -->
    </div><!-- /.col-lg-6 -->
  <div class="col-lg-6">
    <div class="input-group">
      <span class="input-group-btn">
      <%= grouped_collection_select nil, :category_id, Type.all, :categories,
            :name, :id, :name, { include_blank: true },
            { id: 'category-select' , class: "form-control"} %>
      </span>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->
</div><!-- /.row -->
<div class="row">
<div class="col-lg-6">
 <div class="input-group">
   <span class="input-group-btn">
     <%= collection_select( nil, :value, Distance.all, :value, :value, { :include_blank => 'distance from (mi.)'} , { :class => 'form-control' })  %>
   </span>
 </div><!-- /input-group -->
</div><!-- /.col-lg-6 -->
<div class="col-lg-6">
 <div class="input-group">
   <span class="input-group-btn">
     <%= text_field_tag :search, params[:search],:id => 'geo-input', :class => 'form-control'  %>
   </span>
 </div><!-- /input-group -->
</div><!-- /.col-lg-6 -->
</div><!-- /.row -->
<div class="col-lg-12">
<div class="input-group">
  <%= text_field_tag :keyword, nil, class: 'form-control', :placeholder => "Search for.."  %>
  <span class="input-group-btn">
    <%= submit_tag "Go!", class: ' form-control ', style: 'width:100px;background-color:#dbc8e4;'%>
  </span>
</div><!-- /input-group -->
</div><!-- /.col-lg-6 -->
</div><!-- /.row -->
  <% end %>
  </div>
</div>
</div>
<div style="padding-bottom:20px;">
<hr class="style13">
</div>
<div>
<%= render partial: 'search_signed_in' %>
</div>
