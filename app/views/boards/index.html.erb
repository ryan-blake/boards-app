<!-- <p id="notice"><%= notice %></p> -->

<% unless current_user %>
<div style="position:absolute; left:calc(50% - 20px;)">
<p><%= link_to 'Register', new_user_registration_path, class: 'btn btn-primary btn-lg' %></p>
</div>
<% else %>

<% if  current_user && current_user.provider != nil %>
<h3 class="pull-right"><%= link_to 'New', new_board_path %></h3>
<% end %>

<% if current_user && current_user.provider == nil %>
<%= link_to image_tag('powered-by-stripe.png'), user_stripe_connect_omniauth_authorize_path %>
<% elsif current_user && current_user.provider != nil %>
<h2 style="color:white;"> CONNECTED <%= current_user.uid %> </h2>
<% end %>

<div class="col-lg-8">
 <div class="well" style="background:#c9d8eb; box-shadow: 1px 4px 9px 4px #fff; border-color: cyan;">
<%= form_tag({controller: :boards, action: :search}, {method: :get}) do  %>
 <div class="col-sm-4">
   <!-- <%= collection_select( nil, :type_id, Type.all, :id, :name, { :include_blank => 'all'} , { :class => 'form-control' })  %> -->

 <%= collection_select(nil, :type_id, Type.all, :id, :name, {prompt: "Choose a type" }) %>
</div>
 <div class="col-sm-4">
 <%= collection_select( nil, :value, Distance.all, :value, :value, { :include_blank => 'All radii'} , { :class => 'form-control' })  %>
</div>
 <%= text_field_tag :keyword  %> <%= submit_tag "search" %>
</div>
<% end %>
</div>
<table class="well" style="width:100%;">
  <thead >
    <td>
 <h1 style="padding-left: 25px;">Boards</h1>
    </td>
  </thead>

  <tbody class="well container-fluid">
    <% @boardies.each do |board| %>
      <tr class="col-sm-6 well">
        <td class="well center-text" style=" width:30px;border-radius:50%;background-color:lightgrey;overflow:hidden;"><%= link_to attachment_image_tag(board.images.first, :file, :fill, 100, 100), board %></td>
        <td  class="center-text title-ind"><%= link_to board.title, board %></td>

        <td>: <%=  board.make  %> </td>

        <td>: <%=  board.length %> </td>
        <td>Coordinates: <%= board.latitude %> <%= board.longitude %></td>

        <strong> <td>: $<%=  board.price %> </td> </strong>

        <%if current_user && board.user_id == current_user.id %>
        <td><%= link_to 'Edit', edit_board_path(board) %></td>
        <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</hr>




</div>
<% end %>
