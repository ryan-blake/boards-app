  <% end %>

  <div class="actions  text-center">

<% if @board.pending == false %>
  <div class="well">
    <%= f.hidden_field :arrived , value: false %> List Board
    <div class="actions">
      <%= f.submit 'submit', class:'btn btn-success' %>
    </div>
