    <div class="actions">
     <%= f.submit 'cancel', class:'btn btn-danger' %>
    </div>
    <% else %>
      <%= f.hidden_field :pending, value: false %>  Cancel Sale
      <div class="actions">
       <%= f.submit 'cancel', class:'btn btn-danger' %>
      </div>
    <% end %>
</div>





