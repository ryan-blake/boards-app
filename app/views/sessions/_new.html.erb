<div class="modal-header">
      <button class="close" data-dismiss="modal">x</button>
      <h2 class="dark">Log in</h2>
      <% flash.each do |key, value| %>
        <div class="center-text alert alert-<%= key %>" style="font-size:18px;color:blue;width:100%;z=index:-1;">
          <%= value %>
          <button type="button" class="close" data-dismiss="alert"> &times; </button>
        </div>
        <% end %>
    </div>
    <div class="modal-body">
      <div class="facebook-btn center-text">
        <%= link_to 'Facebook log in', user_facebook_omniauth_authorize_path, class: 'btn-sort btn' %>
        </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), remote: true, authenticity_token: true )  do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class:'form-control' %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", class:'form-control' %>
      </div>

      <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-md btn-black-line" %>
      </div>

      <% end %>

      <%= render "devise/shared/links" %>
    </div>
