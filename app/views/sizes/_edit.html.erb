<% if @board.type.id == 1 %>
<table>
<tbody style="border:1px solid black;">

<td id="sizeFeetE" style="display:block"><%= f.number_field :feet, class: 'btn-width form-control', placeholder: 'feet'%></td>
<td id="sizeInchesE" style="display:block"><%= f.number_field :inches, class: 'btn-width form-control', placeholder: 'Inches' %></td>
<td id="sizeWitdthE" style="display:block"><%= f.number_field :width, class: 'btn-width form-control', placeholder: 'width In.',:step => 0.01 %></td>
