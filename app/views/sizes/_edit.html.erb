<td id="sizeVolumeE" style="display:block"><%= f.number_field :volume, class: 'btn-width form-control', placeholder: 'volume/ L',:step => 0.01 %></td>

</tbody>
</table>
<% else %>
<table>
<thead>
      <th ><%= f.label :size %></th>
      <th ><%= f.label :unit_id, "unit" %> <br></th>
    </thead>
    <tbody>
      <tbody style="border:1px solid black;">
        <%= f.label :length %>
        <td id="sizeLengthE" style="display:block"><%= f.number_field :length, class: 'btn-width form-control', placeholder: 'length', :step => 0.01 %></td>
        <td id="sizeWidthE" style="display:block"><%= f.number_field :width, class: 'btn-width form-control', placeholder: 'width/ in.', :step => 0.01 %></td>
        <td id="sizeUnitsE" style="display:block"><%= f.collection_select( :unit_id, Unit.all, :id, :name, { :include_blank => 'Unit'} , { :class => 'form-control' })  %>
        </tbody>
      </table>
      <tbody>
<% end %>
