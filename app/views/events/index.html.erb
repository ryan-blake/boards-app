<p id="notice"><%= notice %></p>

<h1 class="jumbotron">Schedule Events</h1>
<%= week_calendar events: @events do |date, events| %>
  <%= date %>

  <% events.each do |event| %>
    <div>
      <span style="text-decoration:line-through">booked</span>
      <strong><%= event.name %> <%=event.start_time.strftime("%I:%M:%S")  %>
        to <%=event.end_time.strftime("%I:%M:%S") %></strong>
    </div>
  <% end %>
<% end %>
<br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th style="padding-left:10px;">Start Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.start_time %></td>
        <td><%= event.end_time %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
