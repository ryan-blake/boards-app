
<%= form_for [@board, @event] do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this @event from being saved:</h2>
      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="well col-md-8">
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>



  <div class="field pull-left" style="display:flex;" id="datepick">
    <div>
       <%= f.label :start_time %>
       <%# f.datetime_select :start_time, :ampm => true, :minute_step => 5 %>
       <div class='input-group date' id='datetimepicker'>
         <input type='text' class="form-control" name="@event[start_time]" id="@event_time" <% if @event.start_time %>value="<%= @event.start_time.strftime("%m/%d/%Y %I:%M %p") %><% end %>">
         <span class="input-group-addon">
           <span class="glyphicon glyphicon-calendar"></span>
         </span>
       </div>
     </div>
  <div class="field pull-right" style="display:flex;">
    <div>
       <%= f.label :end_time %>
       <%# f.datetime_select :start_time, :ampm => true, :minute_step => 5 %>
       <div class='input-group date' id='datetimepicker1'>
         <input type='text' class="form-control" name="@event[end_time]" id="@event_end_time" <% if @event.end_time %>value="<%= @event.end_time.strftime("%m/%d/%Y %I:%M %p") %><% end %>">
         <span class="input-group-addon">
           <span class="glyphicon glyphicon-calendar"></span>
         </span>
       </div>
     </div>
   </div>
  </div>
  <script>
  $('.date#datetimepicker').datetimepicker().data("DateTimePicker").format('ddd, MMM D YYYY, h:mm A')

  $('.date#datetimepicker1').datetimepicker().data("DateTimePicker").format('ddd, MMM D YYYY, h:mm A')
  </script>

  <br><br>
  <div class=" btn btn-success form-control" style="display:inline;, text:">
    <%= f.submit %>
  </div>

  </div>


<% end %>
