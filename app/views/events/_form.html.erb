<%= form_for [board, event] do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="well col-md-8">
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field pull-right" style="display:flex;">
    <%= f.label :start %>
    <%= f.datetime_select :start_time,  { ampm: true, order: [:day, :month, :year] }, { class: "form-control", style: "padding: 0, 5px, 0, 5px;" } %>
  </div>
  <div class="field pull-right" style="display:flex;">
    <%= f.label :end %><hr>
    <%= f.datetime_select :end_time,  { ampm: true, order: [:day, :month, :year] }, { class: "form-control" } %>
  </div>
  <br><br>
  <div class=" btn btn-success form-control" style="display:inline;, text:">
    <%= f.submit %>
  </div>
</div>




<% end %>
