<!DOCTYPE html>
<html>
  <head>
    <title>still shreds</title>
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<meta name="description" content="Still shreds is the number one source for selling and buying gently used surf | skate | snow | boards.">
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, minimum-scale=1">
<%= stylesheet_link_tag 'application', media: 'all' %>
<%= javascript_include_tag 'application' %>
    <div class="container">
<nav class="navbar navbar-inverse">
<div class="container" style="width:100% !important;padding: 0px 0px 0px 10px !important;">
  <div class="navbar-header">
    <%= link_to 'still shreds', root_path, class: 'navbar-brand' %>
  </div>
  <div id="navbar">
    <ul class="nav navbar-nav">
      <% if user_signed_in? %>
      <li class="my-pages"><%= link_to 'My-boards', my_boards_path %></li>
       <li class="my-pages"><%= link_to 'My-page', user_path(current_user) %></li>
<% end %>

  </div>
  <div style="padding-right:20px;list-style:none;top:1px;position:absolute;right:5px;" class="pull-right">
          <% if user_signed_in? %>
            <li class="usr-lnk"> <%=   link_to current_user.name.split(' ').shift.capitalize + "'s Profile", edit_user_registration_path %></li>
                <li  class="usr-lnk"><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li class="usr-lnk"><%= link_to 'Log In', new_user_session_path %></li>
            <li class="usr-lnk"><%= link_to 'Sign Up', new_user_registration_path %></li>
          <% end %>
        </ul>
        </div>
  </div>
</nav>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>">
    <%= value %>
  </div>
<% end %>
</div>

