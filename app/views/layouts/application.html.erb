    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <div class="container">
<nav class="navbar navbar-inverse">
<div class="container">
  <div class="navbar-header">
    <%= link_to 'boards app', root_path, class: 'navbar-brand' %>
  </div>
  <div id="navbar">
    <ul class="nav navbar-nav">
      <li class="pull-left"><%= link_to 'snow', root_path %></li>
      <li class="pull-left"><%= link_to 'surf', root_path %></li>
