<!DOCTYPE html>
<html>
  <head>
    <title>still shreds</title>
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="Still shreds is the number one source for selling and buying gently used surf | skate | snow | boards.">
    <meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <div class="container">
      <nav class="navbar navbar-inverse">
        <div class="container" style="width:100% !important;padding: 0px 0px 0px 10px !important;">
        <div class="navbar-header">
          <%= link_to 'still shreds', root_path, class: 'navbar-brand' %>
        </div>
        <div style="" class="head-nav-btns">
          <!--  -->
          <% if current_user %>
          <div class="btn-group" role="group" aria-label="...">
            <button type="button" class="btn btn-default"><%=   link_to current_user.name.split(' ').shift.capitalize + "'s Profile", edit_user_registration_path %></button>
            <div class="btn-group" role="group">
              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Dropdown
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu">
                <li><%= link_to 'My-boards', my_boards_path(current_user) %></li>
                <li><%= link_to 'My-page', user_path(current_user) %></li>
              </ul>
            </div>
            <button type="button" class="btn btn-default" style="min-width:50px;min-height:33px;max-height:33px;font-size:10px;"><%= link_to 'Log out', destroy_user_session_path, method: :delete, style: 'left: 5px;position: absolute;top: 10px;' %></button>

          <% else %>
            <button type="button" class="btn btn-default"><%= link_to 'Log In', new_user_session_path %></button>
            <button type="button" class="btn btn-default"><%= link_to 'Sign Up', new_user_registration_path %></button>
            <% end %>

          </div>
          <!--  -->
        </div>
  </div>
</nav>
</div>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>" style="position:absolute;top:50px;right:0;">
    <%= value %>
  </div>
<% end %>


