
<li>
  <div class="panel panel-default convo-panel" data-conversation-id="<%= conversation.id %>">
    <div class="panel-heading">
      <%= link_to conversation.opposed_user(user).email, '', class: 'toggle-window' %>
      <%= link_to "x", close_conversation_path(conversation), class: "btn btn-default btn-xs pull-right",style: "top: 23px;position: absolute;right: 10px;", remote: true, method: :post %>
      <span class="panel-notice" style="display:none;"></span>

    </div>

    <div class="panel-body" style="display: none;">
      <div class="messages-list" style="max-height:100px;min-height:100px;">
        <ul>
          <%= render 'conversations/conversation_content', messages: conversation.messages, user: user %>
        </ul>
      </div>
      <form class="new_message">
              <input name="conversation_id" type="hidden" value="<%= conversation.id %>">
              <input name="user_id" type="hidden" value="<%= user.id %>">
              <textarea name="body" class="form-control"></textarea>
              <input type="submit" class="btn btn-success" value="Send">
            </form>
    </div>
  </div>
</li>
